	name = buty
[ghq]
	root = ~/src
[include]
	path = ~/.gitconfig.local
[alias]
    a = !"git status --short | awk '!/^[ADRM] /' | peco | awk '{print $NF}' | xargs -r git add"
	br = branch
	cm = commit -v
	cma = commit -v --amend
	cman = commit -v --amend --no-edit
	c = !"git branch | awk '!/^\\*/' | peco | xargs -r git checkout"
	co = checkout
	cob = checkout -b
    cobr = !"git branch -r | grep -vE '/(HEAD|master$)' | sed -e 's,origin/,,g' | peco | xargs -r -I{} git checkout -b {} origin/{}"
    cof = !"git status --short | peco | awk '{print $2}' | xargs -r git checkout --"
	comp = !"git checkout master && git pull"
    d = diff
    dc = diff --cached
    g = grep
	gpush = !"git branch | awk '/^\\*/{print $2;exit}' | xargs git push origin"
    grep = grep --line-number
	l = log --oneline --decorate --graph -n10
	ll = !tig
	o = open
	st = status --short --branch

# see http://qiita.com/kyanny/items/10a57a4f1d2806e3a3b8
delete-merged-branches = !"git branch --merged | grep -vE '^\\*|master$|develop$' | xargs -r git branch -d"
[fetch]
	prune = true
[core]
	editor = vim -c \"set fenc=utf8\"
[init]
	templatedir = ~/.git_template
[rebase]
	autosquash = true
[tig "bind"]
    diff = F ?!git commit --fixup %(commit)
    diff = S ?!git commit --squash %(commit)
    main = F ?!git commit --fixup %(commit)
    main = S ?!git commit --squash %(commit)
